.footer
	padding 40px 0
	display block
	color #fff
	background url('../images/footer-bg.png') no-repeat center center
	background-size cover
	.container
		display flex
		flex-direction column
		align-items center
	&__title
		margin-bottom 10px
		font-family latoBold
		font-size 24px
		text-transform uppercase
	&__desc
		margin-bottom 30px
		font-family latoReg
		font-size 23px
	&__social
		display flex
		justify-content space-around
		max-width 335px
	&__social-link
		display flex
		align-items center
		justify-content center
		width 60px
		height 60px
